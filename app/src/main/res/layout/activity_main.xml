<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    android:background="@color/white"

    >

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView2"
        android:layout_width="391dp"
        android:layout_height="481dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerIlac2" />

    <Spinner
        android:id="@+id/spinnerIlac2"
        android:layout_width="267dp"
        android:layout_height="51dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"

        android:background="@drawable/border_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:spinnerMode="dialog"


        />

    <Button
        android:id="@+id/btnAra"
        android:layout_width="70dp"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:onClick="araClick"
        android:text="BUL"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/spinnerIlac2"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"/>




</androidx.constraintlayout.widget.ConstraintLayout>