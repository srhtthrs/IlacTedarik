<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StokGirActivity"
    android:background="@drawable/eczadeposu">

    <Spinner
        android:id="@+id/spinnerIlac"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:background="#77C62828"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <Spinner
        android:id="@+id/spinnerStokDurumu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#7DC62828"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerIlac"

       />

    <Button
        android:id="@+id/btnStokKaydet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:onClick="stokGirClick"
        android:text="Ekle"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/spinnerStokDurumu"
        app:layout_constraintTop_toBottomOf="@+id/spinnerStokDurumu" />
</androidx.constraintlayout.widget.ConstraintLayout>